ALTER TABLE `CRUD_APP`.`Filter_Info` 
ADD COLUMN `CUSTOMER_ID` INT NOT NULL AFTER `ORDER_ID`,
ADD COLUMN `ORDER_DATE` DATETIME NULL AFTER `CUSTOMER_ID`,
ADD COLUMN `SHIP_DATE` VARCHAR(45) NULL AFTER `ORDER_DATE`,
ADD COLUMN `PRODUCT_ID` INT NOT NULL AFTER `SHIP_DATE`,
ADD COLUMN `PRODUCT_NAME` VARCHAR(45) NULL AFTER `PRODUCT_ID`,
ADD COLUMN `CATEGORY` VARCHAR(45) NULL AFTER `PRODUCT_NAME`,
ADD COLUMN `DESCRIPTION` VARCHAR(45) NULL AFTER `CATEGORY`,
ADD COLUMN `NAME` VARCHAR(45) NULL AFTER `DESCRIPTION`,
ADD COLUMN `YEAR_OF_BIRTH` VARCHAR(45) NULL AFTER `NAME`,
ADD COLUMN `GENDER` VARCHAR(45) NULL AFTER `YEAR_OF_BIRTH`,
ADD COLUMN `ADDRESS_LINE_1` VARCHAR(45) NULL AFTER `GENDER`,
ADD COLUMN `CITY` VARCHAR(45) NULL AFTER `ADDRESS_LINE_1`,
ADD COLUMN `POSTAL_CODE` INT NULL AFTER `CITY`,
ADD COLUMN `COUNTRY` VARCHAR(45) NULL AFTER `POSTAL_CODE`;


